<div class="container">

    <!-- Page header start -->
    <div class="page-title">
        <div class="row gutters">
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                <h5 class="title"><%=current_user.username%> <%= link_to "Log out", destroy_user_session_path, :method => :delete  , "data-turbolinks-track": false%></h5>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12"> </div>
        </div>
    </div>
    <!-- Page header end -->

    <!-- Content wrapper start -->
    <div class="content-wrapper">

        <!-- Row start -->
        <div class="row gutters">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                <div class="card m-0">

                    <!-- Row start -->
                    <div class="row no-gutters">
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-3 col-3">
                            <div class="users-container">
                                <ul class="users">
                                <% @users.each do |user| %>
                                  <li class="person" data-chat="person1">
                                        <div class="user">
                                            <img src="/images/avatar.jpg" alt="Retail Admin">
                                        </div>
                                        <p class="name-time">
                                            <span class="name"><%= user.username %></span>
                                        </p>
                                    </li>
                                <% end %>
                                </ul>
                            </div>
                        </div>
                        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-9 col-9">
                            <script>window.current_user = <%= current_user.id %></script>
                            <div class="chat-container">
                                <ul id='chatContainerScroll' class="chat-box chatContainerScroll" style="height: 80vh;overflow-y: scroll;overflow-x: hidden;">
                                    <% @messages.each do |message| %>
                                      <li class="chat-<%= message.user_id == current_user.id ? 'right' : 'left'%>">
                                        <div class="chat-avatar">
                                            <img src="/images/avatar.jpg" alt="Retail Admin">
                                            <div class="chat-name"><%= message.user.username%></div>
                                        </div>
                                        <div class="chat-text"><%= message.content %></div>
                                    </li>
                                    <% end %>
                                    <div id='root'></div>
                                </ul>
                                <div class="form-group mt-3 mb-0">
                                                           <div class="chat-search-box">
                                        <%= render 'shared/message_form'%>
                                </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Row end -->
                </div>

            </div>

        </div>
        <!-- Row end -->

    </div>
    <!-- Content wrapper end -->
</div>